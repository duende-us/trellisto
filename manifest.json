{
  "manifest_version": 2,
  "name": "Trellisto for Trello Plugin",
  "version": "0.0.0.1",
  "description": "Displays a consolidated list of cards from all Trello boards",
  "content_scripts": [
      {
          "matches": ["https://trello.com/*/cards"],
          "css": ["css/style.css"],
          "js": [
              "lib/jquery-2.1.4.min.js",
              "scripts/main.js"
          ],
          "run_at": "document_idle"
      }
  ],
  "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
  }
}